switch (state)
{
    case e_state.idle:
    {   
        grid = mp_grid_create(16,16,room_width/32,room_height/32,32,32);
        path = path_add();
        mp_grid_add_instances(path,Wall,true);
        mp_grid_add_instances(path,Avoid,true);
        mp_grid_path(grid,path,x,y,ObjectiveCoop.x,ObjectiveCoop.y,false);
        
        if (b_isKnockback == true)
        {
            if (position_meeting(x - f_knockback_speed, y, Wall))
            {
                f_knockback_timer = 0;
                x = x + sign(ammo_onhit_x - x) * 30;
                f_knockback_speed = 0;
                
                if(place_meeting(x,y,Wall)== false)
                {
                    path_end();
                    gravity = 0.2;
                }
                b_isKnockback = false;
            }
            else
            {
                x -= f_knockback_speed;
            }    
        }
        
        if (distance_to_object(Player_1) &lt; 94 &amp;&amp; (Player_1.b_deadAnim == false &amp;&amp; Player_1.b_isDead == false)) 
        {
            path_end();
            speed = 0;
            state = e_state.shoot;
        }
        
        if (distance_to_object(Player_2) &lt; 94 &amp;&amp; (Player_2.b_deadAnim == false &amp;&amp; Player_2.b_isDead == false)) 
        {
            path_end();
            speed = 0;
            state = e_state.shoot2;
        }
            
        if(place_meeting(x ,y + 1,Wall)== true)
        {
            path_start(path,2,"",false);
            gravity = 0;
        }
        if(place_meeting(x,y,Wall)== false)
        {
            path_end();
            gravity = 0.2;
        }
        if(direction &gt; 90 &amp;&amp; direction &lt; 270)
        {
            sprite_index=ShootingEnemy_left;
        }
        if(direction &lt; 90 &amp;&amp; direction &gt; -90)
        {
            sprite_index=ShootingEnemy_right;
        }
    }
    break;
    case e_state.shoot:
    {
        path_end();
        dir = sign(Player_1.x - x);
        hsp = dir * 2;
        vsp = (min(7,vsp+0.05));
        
        seconds += 1 / room_speed;
        
        if (b_isKnockback == true)
        {
            if (position_meeting(x - f_knockback_speed, y, Wall))
            {
                f_knockback_timer = 0;
                x = x + sign(ammo_onhit_x - x) * 20;
                f_knockback_speed = 0;
                
                if(place_meeting(x,y,Wall)== false)
                {
                    path_end();
                    state = e_state.idle;
                    gravity = 0.2;
                }
                b_isKnockback = false;
            }
            
            else
            {
                x -= f_knockback_speed;
            }    
        }
        
        if(seconds &gt;= 0.5)
        {
            instance_create(x,y,EnemyProObjCoop1);
            seconds = 0;
        }
        
        if (distance_to_object(Player_1) &gt; 128 || (Player_1.b_deadAnim == true || Player_1.b_isDead == true))
        {
            path_end();
            state = e_state.idle;
        }
        if(place_meeting(x ,y + 1,Wall)== true)
        {
            gravity = 0;
            speed = 0;
            direction = point_direction(x, y, Player_1.x, Player_1.y);
        }
        if(direction &gt; 90 &amp;&amp; direction &lt; 270)
        {
            sprite_index=ShootingEnemy_left;
        }
        if(direction &lt; 90 &amp;&amp; direction &gt; -90)
        {
            sprite_index=ShootingEnemy_right;
        }
    }
    break;
    case e_state.shoot2:
    {
        path_end();
        dir = sign(Player_2.x - x);
        hsp = dir * 2;
        vsp = (min(7,vsp+0.05));
        
        seconds += 1 / room_speed;
        
        if (b_isKnockback == true)
        {
            if (position_meeting(x - f_knockback_speed, y, Wall))
            {
                f_knockback_timer = 0;
                x = x + sign(ammo_onhit_x - x) * 20;
                f_knockback_speed = 0;
                
                if(place_meeting(x,y,Wall)== false)
                {
                    path_end();
                    state = e_state.idle;
                    gravity = 0.2;
                }
                b_isKnockback = false;
            }
            
            else
            {
                x -= f_knockback_speed;
            }    
        }
        
        if(seconds &gt;= 0.5)
        {
            instance_create(x,y,EnemyProObjCoop2);
            seconds = 0;
        }
        
        if (distance_to_object(Player_2) &gt; 128 || (Player_2.b_deadAnim == true || Player_2.b_isDead == true))
        {
            path_end();
            state = e_state.idle;
        }
        if(place_meeting(x ,y + 1,Wall)== true)
        {
            gravity = 0;
            speed = 0;
            direction = point_direction(x, y, Player_2.x, Player_2.y);
        }
        if(direction &gt; 90 &amp;&amp; direction &lt; 270)
        {
            sprite_index=ShootingEnemy_left;
        }
        if(direction &lt; 90 &amp;&amp; direction &gt; -90)
        {
            sprite_index=ShootingEnemy_right;
        }
    }
    break;
    case e_state.dying:
    {
        direction = point_direction(x, y, Player_1.x, Player_1.y);
        path_end();
        speed = 0;
        if(direction &gt; 90 &amp;&amp; direction &lt; 270)
        {
            sprite_index=ShootingEnemy_dying_left;
        }
        if(direction &lt; 90 &amp;&amp; direction &gt; -90)
        {
            sprite_index=ShootingEnemy_dying_right;
        }
        
        if(image_index &gt;= 7)
        {
            i_loot = round(f_multiplierLoot * global.i_baseLoot);
            global.i_currency += i_loot;
            instance_destroy();
        }
    }
    break;
}

//Horizontal Collision
if (place_meeting(round(x+hsp),round(y),Wall))
{
    while(!place_meeting(round(x+sign(hsp)),round(y),Wall)) x += sign(hsp);
    hsp = 0;
}
x += hsp;

//Vertical Collision
if (place_meeting(round(x),round(y+vsp),Wall))
{
    while(!place_meeting(round(x),round(y+sign(vsp)),Wall)) y += sign(vsp);
    vsp = 0;
}
y += vsp;

// damage taken from handgun
if(place_meeting(x, y, Player_1_Handgun_Ammo))
{

    HP -= Player_1_Handgun_Ammo.i_damage;    
    if (b_isKnockback == false)
    {
        b_isKnockback = true;
    }
    
    else
    {
        f_knockback_timer = 0;
    }
    
    if(HP &lt;= 0)
    {
        path_end();
        speed = 0;
        state = e_state.dying;
    }
}

if(place_meeting(x, y, Player_2_Handgun_Ammo))
{

    HP -= Player_2_Handgun_Ammo.i_damage;    
    if (b_isKnockback == false)
    {
        b_isKnockback = true;
    }
    
    else
    {
        f_knockback_timer = 0;
    }
    
    if(HP &lt;= 0)
    {
        path_end();
        speed = 0;
        state = e_state.dying;
    }
}

if (b_isKnockback == true)
{
    // Knockback everytime it is hit by a bullet
    f_knockback_timer = f_knockback_timer + (1 / room_speed);
    knockback_direction = sign(ammo_onhit_x - x);
        
    f_knockback_speed = knockback_acceleration * (f_maxKnockback_time - f_knockback_timer) * knockback_direction;           
}

if (f_knockback_timer &gt;= f_maxKnockback_time)
{
    f_knockback_timer = 0;
    f_knockback_speed = 0;
    b_isKnockback = false;
}

if(place_meeting(x,y,ObjectiveCoop))
{
    audio_play_sound(sound6,0, false);
    ObjectiveCoop.health -= 10;
    instance_destroy();
    instance_create(x,y,EnemyExplode)
}
if(CoopSpawner.waveTime &gt;= 60 || ObjectiveCoop.health &lt;= 0)
{
